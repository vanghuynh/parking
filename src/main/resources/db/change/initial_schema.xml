<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="Huynh Vang" id="001-create-parking-table">
        <createTable tableName="parking">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="parking_pkey"/>
            </column>
            <column name="car_park_no" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="x_coord" type="double"/>
            <column name="y_coord" type="double"/>
            <column name="car_park_type" type="VARCHAR(255)"/>
            <column name="type_of_parking_system" type="VARCHAR(255)"/>
            <column name="short_term_parking" type="VARCHAR(255)"/>
            <column name="free_parking" type="VARCHAR(255)"/>
            <column name="night_parking" type="VARCHAR(255)"/>
            <column name="car_park_decks" type="VARCHAR(255)"/>
            <column name="gantry_height" type="VARCHAR(255)"/>
            <column name="car_park_basement" type="VARCHAR(255)"/>
            <column name="total_lots" type="BIGINT"/>
            <column name="lots_available" type="BIGINT"/>

        </createTable>
    </changeSet>
</databaseChangeLog>
